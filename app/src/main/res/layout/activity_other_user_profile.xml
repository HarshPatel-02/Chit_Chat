<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Other_User_profile">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ou_user_profile_pic"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@id/hr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:src="@drawable/persone" />

    <TextView
        android:id="@+id/p_personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ou_user_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="_._ajay_._44"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/p_memories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_personname"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"
        android:text="Memories\n20"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/p_buddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_personname"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="5sp"
        android:layout_toRightOf="@id/p_memories"
        android:text="Buddy\n"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_personname"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="5sp"
        android:layout_toRightOf="@id/p_buddy"
        android:text="Chat Fame\n20"


        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/p_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_memories"
        android:layout_marginLeft="22sp"
        android:layout_marginTop="10sp"
        android:text="Believe in karma\nmy life m y rule and rool\nOrphic"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/otheruserfollowbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_bio"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text="Follow"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/grid_follow_btn_style"

        />



</RelativeLayout>
