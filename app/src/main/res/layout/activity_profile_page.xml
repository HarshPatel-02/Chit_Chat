<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".profile_page">

    <TextView
        android:id="@+id/pro_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="xoxoxo"
        android:textColor="#01FF00"
        android:textSize="35sp" />

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="25sp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/settings"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/pro_appname"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:id="@+id/hr"
        android:layout_marginTop="10sp"
        android:background="@color/white"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/tempok"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hr"
        android:layout_marginTop="20sp"
        android:elevation="8dp"
        app:cardCornerRadius="100sp">

        <ImageView
            android:id="@+id/p_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/persone" />




    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/p_personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_._ajay_._44"
        android:layout_below="@id/tempok"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memories\n20"
        android:textColor="@color/white"
        android:id="@+id/p_memories"
        android:layout_below="@id/p_personname"
        android:textSize="22sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buddy\n20"
        android:textColor="@color/white"
        android:layout_below="@id/p_personname"
        android:layout_toRightOf="@id/p_memories"
        android:id="@+id/p_buddy"
        android:textSize="22sp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Fame\n20"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/p_personname"
        android:layout_toRightOf="@id/p_buddy"


        android:textSize="22sp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="5sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Believe in karma\nmy life m y rule and rool\nOrphic"
        android:textSize="18sp"
        android:id="@+id/p_bio"
        android:textColor="@color/white"
        android:layout_below="@id/p_memories"
        android:layout_marginLeft="22sp"
        android:layout_marginTop="10sp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:background="@drawable/btn_style_editpro"
        android:paddingLeft="35sp"
        android:paddingRight="35sp"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/p_bio"
        android:id="@+id/p_editpro"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Profile"
        android:background="@drawable/btn_style_editpro"
        android:paddingLeft="35sp"
        android:paddingRight="35sp"
        android:layout_toRightOf="@id/p_editpro"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_below="@id/p_bio"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="20sp"/>

    <ImageButton
        android:layout_width="50sp"
        android:id="@+id/p_yourphoto"
        android:layout_height="50sp"
        android:scaleType="fitCenter"
        android:src="@drawable/post"
        android:background="@android:color/transparent"
        android:layout_below="@id/p_editpro"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="100sp"

        />

    <ImageButton
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@id/p_editpro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100sp"
        android:layout_marginTop="20sp"

        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/newpost" />









</RelativeLayout>