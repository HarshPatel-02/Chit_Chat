<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/login_logo"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="5sp"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/persone" />


    <TextView
        android:layout_toRightOf="@id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/white"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:textSize="22sp"
        android:id="@+id/username_chat"/>

    <TextView
        android:layout_toRightOf="@id/login_logo"
        android:layout_width="wrap_content"
        android:id="@+id/lastmsg"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_chat"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="5sp"
        android:text="hii how are you this is last mesage"
        android:textColor="@color/white"
        android:textSize="18sp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5sp"
        android:layout_marginTop="10sp"
        android:background="#ffffff"
        android:layout_below="@id/login_logo"/>


</RelativeLayout>